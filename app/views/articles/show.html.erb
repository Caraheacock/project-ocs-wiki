<h1><%= @article.title %></h1>
<div id="articles">
  <h5>Categories: 
    <% @article.categories.each do |cat| %>
      <%= cat.name %>
    <% end %>
  </h5>
  <p><%= markdown(@content) %></p>
  <% if current_user %>
    <p>
      <%= link_to("Edit", edit_article_path(@article.id)) %>
      <% if current_user.admin %>
      | <%= link_to("Delete", article_path(@article.id), :method => :delete) %>
      <% end %>
    </p>
  <% end %>
</div>
