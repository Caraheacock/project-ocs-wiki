<h1><%= @title %></h1>
<% if params[:search] != nil && params[:search].size > 0 %>    
  <p>"<%=params[:search]%>" returns <%=@articles.length%> result<%=pluralize(@articles.length)%>.
<% end %>
<% @articles.each do |article| %>
  <p>
    <%= link_to(article.title, article_path(article.slug)) %> 
  </p>
<% end %>