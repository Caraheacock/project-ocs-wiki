<h1>Rename Article</h1>

<% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |error_msg| %>
    <p id="error"><%= error_msg %></p>
  <% end %>
<% end %>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <%= f.submit %>
<% end %>