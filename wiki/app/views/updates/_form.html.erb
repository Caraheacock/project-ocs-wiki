<% if @new_update %>
  <% @new_update.errors.full_messages.each do |error_msg| %>
    <p id="error"><%= error_msg %></p>
  <% end %>
<% end %>

<%= form_for @update do |f| %>
  <p>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :user_id %>
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.label :article_id %>
    <%= f.text_field :article_id %>
  </p>
  <%= f.submit %>
<% end %>